<VirtualHost *:80>
    ServerName {{ new_hostname }}

    DocumentRoot {{install_dir}}/src/web/public

    PassengerRuby /usr/local/bin/ruby

    # Relax Apache security settings
    <Directory {{install_dir}}/src/web/public>
      Allow from all
      Options -MultiViews
      # Uncomment this if you're on Apache >= 2.4:
      Require all granted
    </Directory>
</VirtualHost>